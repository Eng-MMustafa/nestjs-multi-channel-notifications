{
  "name": "@eng-mmustafa/nestjs-multi-channel-notifications",
  "version": "1.0.0",
  "description": "A comprehensive NestJS package that enables you to send notifications across multiple channels from a single, unified interface. Send emails, SMS, WhatsApp, Slack, Discord, Teams, Telegram, and Messenger notifications with ease.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prepare": "npm run build"
  },
  "keywords": [
    "nestjs",
    "notifications",
    "multi-channel",
    "email",
    "sms",
    "whatsapp",
    "slack",
    "discord",
    "teams",
    "telegram",
    "messenger",
    "twilio",
    "nodemailer",
    "communication",
    "messaging",
    "alerts",
    "notification-service",
    "nest",
    "typescript"
  ],
  "author": "Mohammed Mustafa <mhammed24010@gmail.com> (https://github.com/Eng-MMustafa)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Eng-MMustafa/nestjs-multi-channel-notifications.git"
  },
  "bugs": {
    "url": "https://github.com/Eng-MMustafa/nestjs-multi-channel-notifications/issues"
  },
  "homepage": "https://github.com/Eng-MMustafa/nestjs-multi-channel-notifications#readme",
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "dependencies": {
    "@slack/web-api": "^6.9.0",
    "discord.js": "^14.14.0",
    "nodemailer": "^6.9.0",
    "telegraf": "^4.15.0",
    "twilio": "^4.19.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.0",
    "jest": "^29.5.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
